{
  "name": "@mimi/aoc",
  "version": "0.0.2",
  "nodeModulesDir": "auto",
  "exports": {
    ".": "./src/mod.ts",
    "./2022": "./src/2022/mod.ts",
    "./2024": "./src/2024/mod.ts"
  },
  "license": "MIT",
  "tasks": {
    "new-year": {
      "description": "Create a new year directory",
      "command": "deno run --allow-read --allow-write --allow-net --env-file=.env --allow-env ./scripts/new-year.ts"
    },
    "new-day": {
      "description": "Create a puzzle for the given year and day",
      "command": "deno run --allow-read --allow-write --allow-net --env-file=.env --allow-env ./scripts/new-day.ts"
    },
    "test": {
      "description": "Run tests",
      "command": "deno test -A"
    }
  },
  "publish": {
    "include": [
      "src",
      "readme.md"
    ],
    "exclude": [
      "**/*.test.ts"
    ]
  },
  "lint": {
    "rules": {
      "exclude": ["no-namespace", "no-explicit-any", "no-cond-assign", "no-misused-new"]
    }
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "always"
    }
  },
  "imports": {
    "@cliffy/keypress": "jsr:@cliffy/keypress@1.0.0-rc.7",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.7",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@std/fs": "jsr:@std/fs",
    "@std/path": "jsr:@std/path",
    "@std/net": "jsr:@std/net",
    "@std/env": "jsr:@std/env",
    "@std/testing": "jsr:@std/testing",
    "@std/expect": "jsr:@std/expect",
    "@std/assert": "jsr:@std/assert",
    "@cursorgoto": "https://denopkg.com/iamnathanj/cursor@v2.2.0/mod.ts",
    "lpsolver": "npm:lpsolver@^1.0.2"
  }
}
